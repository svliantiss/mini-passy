{
	"name": "mini-passy",
	"version": "0.1.0",
	"description": "Lightweight AI gateway for routing LLM requests",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist/**/*", ".env.example"],
	"bin": {
		"mini-passy": "./dist/index.js"
	},
